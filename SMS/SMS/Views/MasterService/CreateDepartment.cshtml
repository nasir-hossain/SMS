@model SMS.ViewModel.DepartmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-3 ms-4">
        <form asp-controller="MasterService" asp-action="CreateDepartment" method="post" Id="myForm" onsubmit="clearFormFields();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-2">
                <label asp-for="DepartmentName" class="control-label">Department Name</label>
                <input asp-for="DepartmentName" class="form-control mt-2" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-success ms-2" asp-controller="MasterService" asp-action="GetDepartment">Back to list</a>

            </div>
        </form>
    </div>
</div>

