@model IEnumerable<SMS.ViewModel.DepartmentViewModel>

@{
    ViewData["Title"] = "Department";
    Layout = "_AdminLayout";
}




<div class="margin-top-100">
    <div class="row">
        <div class="col-8">

            <h3 class="alert alert-light ms-2 mt-3">Department Info</h3>

            <div class="d-flex justify-content-start ms-4">
                @if (!string.IsNullOrEmpty(ViewBag.Msg))
                {
                    <h5 class="text-danger">@ViewBag.Msg</h5>
                }
            </div>

            <div class="d-flex justify-content-end">
                <a asp-controller="MasterService" asp-action="CreateDepartment" class="btn btn-primary ">Create</a>
            </div>

            <table class="table table-responsive-sm border table-bordered ms-3 mt-3" style="font-size:15px;">
                <thead>
                    <tr>
                        <th>
                            Department
                        </th>
                        <th class="text-center">
                            Edit
                        </th>
                        <th class="text-center">
                            Delete
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>


                            <td class="text-center">
                                @*asp-route-id for Route Values => {controller=Home}/{action=Index}/{id?} => only For get Method*@
                                <a asp-action="" asp-route-id="@item.Id">
                                    <img src="~/image/Edit.png" style="width:20px; height:20px;" class="img-fluid" />
                                </a>

                            </td>
                            <td class="text-center">
                                <a asp-controller="MasterService" asp-action="DeleteDepartment" asp-route-id="@item.Id">
                                    <img src="~/image/Delete.png" style="width:20px; height:20px;" class="img-fluid" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>



