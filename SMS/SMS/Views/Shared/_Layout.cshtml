
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mainSection.css" asp-append-version="true" />
</head>
<body>
    <header>
      
        <div class="container-fluid">
            <div class="row bg-success p-2 border-bottom border-2 border-warning stickHeader">

                <div class="flex-container">

                    <div class="flex-item-1">
                        <img src="~/image/logo.png" style="width:60px; height:60px;" class="img-fluid" />
                    </div>


                    <div class="flex-item-2">
                        <p class="h3 text-white text-md-center mt-md-1">Bangladesh Army International University of Science and Technology</p>
                    </div>

                    <partial name="_HeaderPartial" />
                  
                </div>

            </div>
        </div>



    </header>


    <div class="container-fluid contentMain">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



